{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "regions": ["icn1"],
  "builds": [
    {
      "src": "vercel-api/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "kraton-v2/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/vercel-api/$1" },
    { "src": "/assets/(.*)", "dest": "/kraton-v2/dist/assets/$1" },
    { "src": "^/$", "dest": "/kraton-v2/dist/index.html" },
    { "src": "/(.*\\.(js|css|ico|png|jpg|svg|woff|woff2|ttf|eot))", "dest": "/kraton-v2/dist/$1" },
    { "src": "/(.*)", "dest": "/kraton-v2/dist/index.html" }
  ]
}
