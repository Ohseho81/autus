{
  "dashboard": {
    "title": "AUTUS API Performance Dashboard",
    "description": "Real-time monitoring of AUTUS API performance, errors, and system resources",
    "tags": ["autus", "api", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{ method }} {{ endpoint }}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Response Time (P95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, http_request_duration_seconds_bucket)",
            "legendFormat": "P95 - {{ method }} {{ endpoint }}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "{{ endpoint }}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Database Query Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, db_query_duration_seconds_bucket)",
            "legendFormat": "{{ query_type }}"
          }
        ]
      },
      {
        "id": 5,
        "title": "System CPU Usage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "system_cpu_usage_percent"
          }
        ]
      },
      {
        "id": 6,
        "title": "System Memory Usage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16},
        "targets": [
          {
            "expr": "system_memory_usage_percent"
          }
        ]
      },
      {
        "id": 7,
        "title": "System Disk Usage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16},
        "targets": [
          {
            "expr": "system_disk_usage_percent"
          }
        ]
      },
      {
        "id": 8,
        "title": "Total API Requests",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "http_requests_total"
          }
        ]
      },
      {
        "id": 9,
        "title": "Active Devices",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 24},
        "targets": [
          {
            "expr": "devices_online"
          }
        ]
      },
      {
        "id": 10,
        "title": "Blocked Clients",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "rate_limiter_blocked_clients"
          }
        ]
      },
      {
        "id": 11,
        "title": "Health Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 24},
        "targets": [
          {
            "expr": "health_check_status"
          }
        ]
      }
    ],
    "refresh": "10s",
    "schemaVersion": 27,
    "style": "dark",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "uid": "autus-api-performance",
    "version": 1
  }
}
