{
  "pack_id": "RulePack::LocalGovReadiness",
  "version": "1.0.0",
  "description": "지자체 준비도 평가 - MOU 및 파일럿 진행 조건 검증",
  
  "listens_to": [
    "EVT::LGO_CONTACT_MADE",
    "EVT::LGO_PROPOSAL_SENT",
    "EVT::LGO_DATA_SHARED",
    "EVT::LGO_MOU_DRAFTED",
    "EVT::LGO_MOU_SIGNED",
    "EVT::LGO_PILOT_STARTED"
  ],
  
  "conditions": [
    {
      "id": "data_submission_threshold",
      "field": "data_submission_rate",
      "op": ">=",
      "value": 0.70,
      "weight": 0.35,
      "required": true
    },
    {
      "id": "economic_report_exists",
      "field": "economic_report_generated",
      "op": "==",
      "value": true,
      "weight": 0.25,
      "required": false
    },
    {
      "id": "mou_signed",
      "field": "mou_status",
      "op": "==",
      "value": "signed",
      "weight": 0.20,
      "required": false
    },
    {
      "id": "contact_verified",
      "field": "contact_verified",
      "op": "==",
      "value": true,
      "weight": 0.10,
      "required": true
    },
    {
      "id": "pilot_capacity",
      "field": "target_student_count",
      "op": ">=",
      "value": 10,
      "weight": 0.10,
      "required": false
    }
  ],
  
  "evaluation_mode": "weighted",
  "threshold": 0.70,
  
  "on_pass": {
    "trigger_flow": "Flow::LGO_MOU",
    "emit_event": "EVT::LGO_READY_FOR_MOU",
    "notify": ["ops_team", "lgo_manager"],
    "log_level": "info"
  },
  
  "on_fail": {
    "retry_after_seconds": 86400,
    "fallback_flow": "Flow::LGO_FOLLOWUP",
    "notify": ["ops_team"],
    "log_level": "warn"
  },
  
  "delta_overrides": {
    "KR": {
      "conditions": [
        {
          "id": "data_submission_threshold",
          "field": "data_submission_rate",
          "op": ">=",
          "value": 0.75
        }
      ]
    },
    "JP": {
      "conditions": [
        {
          "id": "data_submission_threshold",
          "field": "data_submission_rate",
          "op": ">=",
          "value": 0.80
        }
      ],
      "threshold": 0.75
    }
  }
}
