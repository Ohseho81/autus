{
  "flow_id": "Flow::GOV_NATIONAL_PROJECT",
  "version": "1.0.0",
  "description": "중앙정부 국가 프로젝트 프로세스 - 경제효과 리포트부터 대국민 홍보까지",
  
  "triggered_by": ["RulePack::GovernmentCertification"],
  "execution_mode": "async",
  "timeout_seconds": 2592000,
  
  "retry_policy": {
    "max_retries": 2,
    "backoff_multiplier": 3,
    "initial_delay_seconds": 172800
  },
  
  "steps": [
    {
      "step_id": "step_1_generate_economic_report",
      "order": 1,
      "name": "국가경제효과 리포트 자동생성",
      "action_type": "report_generation",
      "action_config": {
        "report_type": "national_economic_impact",
        "data_sources": [
          "lgo_scorecards",
          "uni_scorecards",
          "emp_scorecards",
          "student_outcomes",
          "tax_contributions"
        ],
        "metrics": [
          "total_job_creation",
          "regional_economic_boost",
          "tax_revenue_generated",
          "skill_development_index",
          "international_competitiveness"
        ],
        "output_formats": ["pdf", "pptx", "xlsx"],
        "storage_path": "/reports/national/"
      },
      "execution_mode": "async",
      "on_success": {
        "next_step": "step_2_policy_alignment"
      },
      "on_failure": {
        "retry": true,
        "notify": ["analytics_team", "gov_relations"]
      }
    },
    {
      "step_id": "step_2_policy_alignment",
      "order": 2,
      "name": "정책 정렬문서 생성",
      "action_type": "generate_document",
      "action_config": {
        "template_id": "policy_alignment_v1",
        "output_format": "pdf",
        "variables": [
          "national_strategy_alignment",
          "ministry_priorities",
          "sdg_contributions",
          "bilateral_agreements"
        ],
        "cross_reference": [
          "economic_report",
          "success_metrics",
          "future_projections"
        ],
        "storage_path": "/documents/gov/policy/"
      },
      "execution_mode": "sync",
      "on_success": {
        "next_step": "step_3_funding_application"
      },
      "on_failure": {
        "retry": true,
        "notify": ["gov_relations", "legal_team"]
      }
    },
    {
      "step_id": "step_3_funding_application",
      "order": 3,
      "name": "공모사업 자동 제출",
      "action_type": "api_call",
      "action_config": {
        "endpoint": "/api/v1/gov/funding/submit",
        "method": "POST",
        "payload_template": {
          "program_ids": "{{eligible_programs}}",
          "application_documents": [
            "economic_report",
            "policy_alignment",
            "implementation_plan"
          ],
          "budget_request": "{{calculated_budget}}",
          "project_duration_months": "{{duration}}"
        },
        "pre_submission_review": true,
        "reviewer_roles": ["exec_team", "finance_team"]
      },
      "execution_mode": "async",
      "required_approvals": ["exec_team"],
      "on_success": {
        "next_step": "step_4_public_materials"
      },
      "on_failure": {
        "retry": true,
        "notify": ["gov_relations", "exec_team"]
      }
    },
    {
      "step_id": "step_4_public_materials",
      "order": 4,
      "name": "대국민 홍보 자료 생성",
      "action_type": "generate_document",
      "action_config": {
        "template_ids": [
          "infographic_national_impact",
          "press_release_national",
          "social_media_kit",
          "video_script_national"
        ],
        "output_formats": ["png", "pdf", "docx", "md"],
        "variables": [
          "key_achievements",
          "success_stories",
          "future_vision",
          "call_to_action"
        ],
        "localization": ["ko", "en"],
        "storage_path": "/materials/public/"
      },
      "execution_mode": "async",
      "on_success": {
        "emit_event": "EVT::GOV_PR_MATERIALS_READY"
      },
      "on_failure": {
        "retry": true,
        "notify": ["pr_team", "marketing_team"]
      }
    }
  ],
  
  "on_complete": {
    "emit_event": "EVT::GOV_NATIONAL_PROJECT_FLOW_COMPLETED",
    "update_scorecard": true,
    "notify": ["exec_team", "gov_relations", "board", "all_stakeholders"],
    "rekor_log": true
  },
  
  "delta_overrides": {
    "JP": {
      "steps": [
        {
          "step_id": "step_4_public_materials",
          "action_config": {
            "localization": ["ja", "en"]
          }
        }
      ]
    }
  }
}
