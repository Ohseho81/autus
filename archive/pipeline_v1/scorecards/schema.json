{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LimePass ScoreCard Schema",
  "description": "Schema for defining scorecards that track entity performance",
  "type": "object",
  "properties": {
    "scorecard_id": {
      "type": "string",
      "pattern": "^ScoreCard::[A-Za-z]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "entity_type": {
      "type": "string",
      "enum": ["lgo", "university", "employer", "student", "partner"]
    },
    "description": {
      "type": "string"
    },
    "max_score": {
      "type": "integer",
      "default": 100
    },
    "metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "metric_id": { "type": "string" },
          "name": { "type": "string" },
          "weight": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "max_points": { "type": "integer" },
          "calculation_type": {
            "type": "string",
            "enum": ["percentage", "threshold", "linear", "logarithmic", "custom"]
          },
          "data_source": { "type": "string" },
          "update_frequency": {
            "type": "string",
            "enum": ["realtime", "hourly", "daily", "weekly", "monthly"]
          },
          "thresholds": {
            "type": "object",
            "properties": {
              "excellent": { "type": "number" },
              "good": { "type": "number" },
              "fair": { "type": "number" },
              "poor": { "type": "number" }
            }
          }
        },
        "required": ["metric_id", "name", "weight", "max_points"]
      }
    },
    "tiers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tier_name": { "type": "string" },
          "min_score": { "type": "integer" },
          "max_score": { "type": "integer" },
          "benefits": {
            "type": "array",
            "items": { "type": "string" }
          },
          "badge": { "type": "string" }
        },
        "required": ["tier_name", "min_score"]
      }
    },
    "decay_rules": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "decay_rate_per_day": { "type": "number" },
        "minimum_score": { "type": "integer" },
        "exemption_conditions": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "audit_config": {
      "type": "object",
      "properties": {
        "rekor_log": { "type": "boolean", "default": true },
        "hash_algorithm": { "type": "string", "default": "sha256" },
        "immutable_fields": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "delta_overrides": {
      "type": "object",
      "additionalProperties": {
        "type": "object"
      }
    }
  },
  "required": ["scorecard_id", "version", "entity_type", "metrics"]
}
