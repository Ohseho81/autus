# scenario_normal.json
# 시나리오 1: 정상 운영 (Normal Operation)
#
# 설명: 모든 행성 값이 안정적이고 예측 가능한 상태
# 대상: 일반 사용자 (User 모드)
# 기대: Solar/Cockpit 렌즈에서 안정적인 궤도 표시

{
  "scenario": {
    "id": "SCENARIO_NORMAL",
    "name": "Normal Operation",
    "name_ko": "정상 운영",
    "description": "All planets stable, predictable orbit",
    "duration_ms": 30000,
    "mode": "user"
  },
  
  "entity": {
    "entity_id": "ENT_DEMO_NORMAL",
    "entity_type": "company",
    "name": "Stable Corp"
  },
  
  "initial_shadow": {
    "shadow32f": [
      0.75, 0.78, 0.72, 0.76, 0.80, 0.74, 0.77, 0.73,
      0.82, 0.79, 0.81, 0.75, 0.78, 0.76, 0.80, 0.77,
      0.74, 0.79, 0.75, 0.78, 0.76, 0.80, 0.77, 0.74,
      0.79, 0.75, 0.78, 0.76, 0.80, 0.77, 0.74, 0.15
    ],
    "planets9": {
      "OUTPUT": 0.75,
      "QUALITY": 0.80,
      "TIME": 0.72,
      "FRICTION": 0.25,
      "STABILITY": 0.82,
      "COHESION": 0.78,
      "RECOVERY": 0.76,
      "TRANSFER": 0.35,
      "SHOCK": 0.15
    }
  },
  
  "events": [
    {
      "ts_offset_ms": 0,
      "kind": "SCENARIO_START",
      "tags": ["demo", "normal"],
      "payload": { "message": "Normal operation scenario started" }
    },
    {
      "ts_offset_ms": 5000,
      "kind": "METRIC_UPDATE",
      "tags": ["output", "stable"],
      "payload": { "planet": "OUTPUT", "delta": 0.02 }
    },
    {
      "ts_offset_ms": 10000,
      "kind": "METRIC_UPDATE",
      "tags": ["quality", "stable"],
      "payload": { "planet": "QUALITY", "delta": 0.01 }
    },
    {
      "ts_offset_ms": 15000,
      "kind": "STATUS_CHECK",
      "tags": ["health", "green"],
      "payload": { "status": "all_clear" }
    },
    {
      "ts_offset_ms": 20000,
      "kind": "METRIC_UPDATE",
      "tags": ["stability", "improving"],
      "payload": { "planet": "STABILITY", "delta": 0.03 }
    },
    {
      "ts_offset_ms": 25000,
      "kind": "FORECAST_UPDATE",
      "tags": ["forecast", "positive"],
      "payload": { "trend": "stable_growth" }
    },
    {
      "ts_offset_ms": 30000,
      "kind": "SCENARIO_END",
      "tags": ["demo", "complete"],
      "payload": { "result": "success" }
    }
  ],
  
  "expected_results": {
    "final_avg_health": { "min": 0.70, "max": 0.85 },
    "shock_max": 0.3,
    "friction_max": 0.4,
    "orbit_stability": "high",
    "ui_indicators": {
      "color": "green",
      "alerts": 0
    }
  },
  
  "verification": {
    "checkpoints": [
      { "ts_offset_ms": 10000, "check": "planets9.OUTPUT >= 0.70" },
      { "ts_offset_ms": 20000, "check": "planets9.STABILITY >= 0.80" },
      { "ts_offset_ms": 30000, "check": "planets9.SHOCK <= 0.25" }
    ]
  }
}
