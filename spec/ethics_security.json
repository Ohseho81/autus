{
  "version": "autus.ethics.v1",
  "lock": true,
  "principles": {
    "physics_only": {
      "rule": "시스템은 오직 물리량만 표현한다",
      "forbidden": ["판단", "추천", "선악 평가", "감정적 언어"]
    },
    "no_judgment": {
      "rule": "모든 상태는 중립적이다",
      "description": "높은 엔트로피가 '나쁜' 것이 아니며, 낮은 밀도가 '실패'가 아니다"
    },
    "user_decides": {
      "rule": "사용자가 결정한다",
      "description": "시스템은 물리적 결과만 보여주고, 행동 선택은 전적으로 사용자의 몫"
    }
  },
  "data_ownership": {
    "rule": "모든 데이터는 사용자 소유",
    "storage": {
      "location": "LOCAL_ONLY",
      "description": "사용자 디바이스 내에서만 데이터 저장",
      "cloud_sync": false,
      "third_party_access": false
    },
    "export": {
      "allowed": true,
      "formats": ["JSON", "CSV"],
      "encryption": "AES-256 (사용자 키)"
    },
    "deletion": {
      "user_initiated": true,
      "automatic_backup": false,
      "right_to_forget": "완전 삭제 보장"
    }
  },
  "local_processing": {
    "rule": "모든 물리 연산은 로컬에서 실행",
    "llm_boundary": {
      "allowed": ["언어 입력 → 물리량 변환 (Distiller)", "물리량 → 언어 출력 (Renderer)"],
      "forbidden": ["물리 연산 위임", "판단/추천 요청", "외부 데이터 수집"]
    },
    "api_calls": {
      "external": false,
      "description": "외부 API 호출 금지, 모든 연산은 로컬 커널에서 수행"
    }
  },
  "determinism_guarantee": {
    "rule": "동일 입력 → 동일 출력 보장",
    "mechanisms": [
      "canonical_json (정렬된 키, 고정 구분자)",
      "round_f (float 6자리 반올림)",
      "fixed_pipeline_order (STAGE 순서 고정)",
      "sorted_ops (t_ms, op_id 순 정렬)"
    ],
    "replay": {
      "enabled": true,
      "hash_chain": "SHA256",
      "verification": "언제든 동일 시각적 상태로 재현 가능"
    }
  },
  "security": {
    "authentication": {
      "method": "LOCAL_PIN or BIOMETRIC",
      "session_isolation": true
    },
    "encryption": {
      "at_rest": "AES-256",
      "in_transit": "TLS 1.3 (로컬 통신도 적용)"
    },
    "audit_log": {
      "enabled": true,
      "retention": "사용자 설정 (기본 30일)",
      "tamper_proof": "Hash Chain 검증"
    }
  },
  "accessibility": {
    "rule": "모든 물리 정보에 대한 접근성 보장",
    "features": [
      "색약/색맹 대응 컬러 팔레트",
      "스크린 리더 호환 라벨",
      "키보드 전용 탐색",
      "최소 터치 타겟 44px"
    ]
  },
  "forbidden_uses": [
    "타인의 물리량 추적/감시",
    "판단/평가 기반 자동화",
    "외부 시스템과의 데이터 공유",
    "광고/마케팅 목적 데이터 활용",
    "AI 학습 데이터로의 전용"
  ]
}





